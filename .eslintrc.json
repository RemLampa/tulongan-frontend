{
    "extends": [
        "eslint:recommended",
        "airbnb",
        "plugin:prettier/recommended"
    ],
    "parser": "typescript-eslint-parser",
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": [
        "react",
        "typescript",
        "prettier"
    ],
    "rules": {
       "typescript/no-unused-vars": "warn"
    },
    "overrides": [
        {
            "files": [
                "*.test.js",
                "*.test.ts",
                "*.test.tsx"
            ],
            "env": {
                "jest": true,
                "browser": true,
                "es6": true
            }
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {
                "no-undef": "off"
            }
        },
        {
            "files": [
                "pages/*.js",
                "pages/*.jsx",
                "pages/*.ts",
                "pages/*.tsx" 
            ],
            "rules": {
                "react/react-in-jsx-scope": "off"
            }
        },
        {
            "files": [
                "*.tsx"
            ],
            "rules": {
                "react/jsx-filename-extension": "off"
            }
        }
    ]
}
